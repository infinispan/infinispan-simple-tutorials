<distributed-cache name="sqlTableCache">
    <encoding media-type="application/x-protostream"/>
    <persistence>
        <table-jdbc-store
                read-only="true"
                shared="false"
                dialect="H2"
                table-name="AUTHORS">
            <connection-pool connection-url="jdbc:h2:tcp://localhost:9123/~/library;DB_CLOSE_DELAY=-1"
                             username="infinispan"
                             password="secret"
                             driver="org.h2.Driver"/>
            <schema message-name="Author" package="library" embedded-key="true"/>
        </table-jdbc-store>
    </persistence>
</distributed-cache>